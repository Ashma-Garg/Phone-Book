<%-include('partial/header');%>
        <form action="/edit/<%=data._id%>?_method=PUT" method="POST" class="col-md-4 col-lg-4 col-sm-4" style="margin:7% 30%;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);padding:20px;border-radius: 10px;">
          <% if(failure_message!=''){ %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin:5px 5px;">
              <p><%= failure_message %></p>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
          <% } %>
          <div class="form-group">
            <label for="inputAddress">Name</label>
            <input type="text" class="form-control"  style="text-transform: capitalize;" value="<%= data.Name %>" placeholder="Enter Name" name="name">
          </div>
          <div class="form-group">
            <label for="inputAddress">Date of Birth</label>
            <input type="text" class="form-control" value="<%= data.DOB %>" placeholder="Enter Your DOB" name="DOB">
        </div>
        <div class="form-group">
          <label for="inputEmail4">Email</label>
          <% data.Email.forEach(function(ele){%>
            <div class="row">
              <!-- <div style="display: inline-block;"> -->
                <div class="col col-md-11 col-lg-11 col-sm-11">
                  <input type="email" value="<%= ele %>"  style="text-transform: lowercase;" class="form-control" name="email[]">
                </div>
                <div class="col col-md-1 col-lg-1 col-sm-1">
                  <img onclick="Addem()" style="float:left;padding-top:7px;" src="https://img.icons8.com/ios-filled/20/000000/plus.png">
                </div>
              <!-- </div> -->
            </div>
          <%})%> 
          <div class="row">
            <div id="addem" name="inputEmail4" class="col col-lg-11 col-md-11 col-sm-11">
              
            </div>
          </div>
          
        </div>
              <!-- <div class="form-group col-md-6">
                <label for="inputPassword4">Password</label>
                <input type="password" class="form-control">
              </div> -->

        <div class="form-group">
          <label for="inputAddress">Phone Number</label>
          <% data.Phoneno.forEach(function(ele){%>
            <div class="row">
              <div class="col col-lg-11 col-md-11 col-sm-11">
                <input type="number" class="form-control" value="<%= ele %>" placeholder="Enter phoneno" name="phoneno[]">
              </div>
              <div class="col col-lg-1 col-md-1 col-sm-1">
                <img onclick="Addph()" style="float:left;padding-top:7px;" src="https://img.icons8.com/ios-filled/20/000000/plus.png">
              </div>
            </div>
            <%})%>
            <div class="row">
              <div name="inputAddress" id="addph" class="col col-sm-11 col-lg-11 col-md-11">

              </div>
          </div>
            <button type="submit" class="btn btn-primary">Submit</button>

      </form>
      <script>
        function Addem(){
         var input=document.createElement('input');
         input.classList.add("form-control");
         input.setAttribute("name","email[]");
         input.setAttribute('autofocus','autofocus');
         input.style.textTransform="lowercase";
         var d=document.getElementById("addem");
         d.appendChild(input);
       }
       function Addph(){
         var input=document.createElement('input');
         input.classList.add("form-control");
         input.setAttribute("name","phoneno[]");
         input.setAttribute('autofocus','autofocus');
         var d=document.getElementById("addph");
         d.appendChild(input);
       }
     </script>
<%-include('partial/footer');%>